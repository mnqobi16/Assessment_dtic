@model List<Assessment_dtic.Models.Patient>
<h2>Patients</h2>
<a asp-action="Create" asp-controller="Patient" class="btn btn-primary mb-3">Create New Patient</a>
<table id="patientsTable" class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>ID Number</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Surname</td>
                <td>@patient.IDNumber</td>
                <td>@patient.Gender</td>
                <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info me-1">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patientsTable').DataTable();

            // Edit Modal
            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var modal = $(this);
                modal.find('#editModalBody').html('<div class="text-center p-5"><div class="spinner-border"></div></div>');
                $.get('@Url.Action("Edit", "Patient")', { id: id }, function (data) {
                    modal.find('#editModalBody').html(data);
                });
            });

            // Details Modal
            $('#detailsModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var modal = $(this);
                modal.find('#detailsModalBody').html('<div class="text-center p-5"><div class="spinner-border"></div></div>');
                $.get('@Url.Action("Details", "Patient")', { id: id }, function (data) {
                    modal.find('#detailsModalBody').html(data);
                });
            });

            // AJAX submit for Edit
            $(document).on('submit', '#editPatientForm', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: "POST",
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#editModal').modal('hide');
                            location.reload();
                        } else {
                            $('#editModalBody').html(response);
                        }
                    }
                });
            });
        });
    </script>
}
